<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#23262B"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 총 구독 금액 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 이번 달 구독 총액"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₩ 45,000"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 스크롤 가능한 콘텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱별 사용시간 통계"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp"/>

            <!-- 카드 예제: Youtube -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:elevation="6dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_circle_bg"
                        android:layout_marginRight="14dp"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_youtube_music"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Youtube"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 🔥 추천"
                                android:textColor="#FFD700"
                                android:textSize="14sp"
                                android:layout_marginLeft="6dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사용시간: 1시간 30분"
                            android:textColor="#AAAAAA"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"/>

                        <!-- ProgressBar -->
                        <ProgressBar
                            android:id="@+id/pbYoutube"
                            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="60"
                            android:progressTint="#FFD700"
                            android:backgroundTint="#444"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📌 사용량 적정"
                            android:textColor="#FFD700"
                            android:textSize="14sp"/>

                        <!-- 해지 버튼 추가 -->
                        <Button
                            android:id="@+id/btnCancelYoutube"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해지하기"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF5252"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 카드 예제: 메모위젯 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:elevation="6dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_circle_bg"
                        android:layout_marginRight="14dp"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_default_icon"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="메모위젯"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ⚠️ 낮음"
                                android:textColor="#FF5252"
                                android:textSize="14sp"
                                android:layout_marginLeft="6dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사용시간: 50분"
                            android:textColor="#AAAAAA"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"/>

                        <!-- ProgressBar -->
                        <ProgressBar
                            android:id="@+id/pbMemo"
                            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="30"
                            android:progressTint="#FF5252"
                            android:backgroundTint="#444"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📌 사용량 적음"
                            android:textColor="#FF5252"
                            android:textSize="14sp"/>

                        <!-- 해지 버튼 추가 -->
                        <Button
                            android:id="@+id/btnCancelMemo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해지하기"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF5252"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_bar_include"
        layout="@layout/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>





