<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:elevation="12dp"
    android:layout_margin="24dp">

    <!-- 경고 아이콘 -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_warning_red"
        android:contentDescription="경고"
        android:layout_marginBottom="20dp"
        app:tint="#F44336" />

    <!-- 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="외부 페이지로 이동합니다"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- 설명 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Netflix 구독 해지 페이지로 이동하려고 합니다.\n외부 웹사이트에서 해지 절차를 진행하셔야 합니다."
        android:textColor="#DC4C4C"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- 링크 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.netflix.com/cancelplan"
        android:textColor="#E50914"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="28dp" />

    <!-- 버튼 영역 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="12dp">

        <Button
            android:id="@+id/btn_move_cancel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="해지 페이지로 이동"
            android:backgroundTint="#E50914"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:elevation="6dp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="취소"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>
</LinearLayout>
