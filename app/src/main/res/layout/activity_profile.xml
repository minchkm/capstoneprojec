<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        app:tint="#FFFFFF"
        android:contentDescription="뒤로가기"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:focusable="true"/>
    <!-- 프로필 영역 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile_default"
            android:background="@drawable/bg_circle_gradient"
            android:contentDescription="프로필"
            android:layout_marginBottom="16dp"
            android:elevation="8dp" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동 님"
            android:textColor="#EEEEEE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@gmail.com"
            android:textColor="#AAAAAA"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 카드 컨테이너 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">

        <!-- 누적 구독 금액 카드 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_money"
                    android:layout_marginEnd="12dp"
                    app:tint="#FFD700"
                    android:contentDescription="구독 금액"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 누적 구독 금액"
                    android:textColor="#EEEEEE"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/totalSubscriptionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩33,500"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 현재 구독 중인 앱 수 카드 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:elevation="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_apps"
                android:layout_marginEnd="12dp"
                app:tint="#4CAF50"
                android:contentDescription="앱 수"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="현재 구독 중인 앱 수"
                android:textColor="#EEEEEE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalSubscriptionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2개"
                android:textColor="#EEEEEE"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 알림 설정 카드 -->

        <!-- 로그아웃 버튼 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="24dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="알림"
                android:src="@drawable/ic_alarm"
                android:tint="#FF5722" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="내 알림 설정"
                android:textColor="#EEEEEE"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>



        <!-- 정보 보기 버튼 카드 -->
        <LinearLayout
            android:id="@+id/showInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보 보기"
                android:textColor="#4FC3F7"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logoutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="#E53935"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
