<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#23262B"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Google One 아이콘과 이름 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_google_one"
            android:contentDescription="Google One"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google One"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 사용시간 정보 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4월 사용시간: 0.5시간"
            android:textColor="#CCCCCC"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- 경고/안내 박스 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:background="@drawable/gradient_warning_bg"
        android:elevation="6dp"
        android:clipToOutline="true"
        android:layout_marginTop="8dp">

        <!-- 경고 메시지 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning_red"
                android:contentDescription="경고"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2개월 연속 2시간 사용 중입니다."
                android:textColor="#FFD600"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 구독 가격 정보 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 구독 금액: ₩ 12,000/월"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <!-- 안내 문구 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독을 유지하실 건가요?"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp">

        <!-- 뒤로가기 버튼 (어두운 3D 느낌) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ignore"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="뒤로 가기"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_dark_3d"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="해지하러 가기"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/btn_red_3d"/>

    </LinearLayout>
</LinearLayout>
