<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 말풍선 꼬리 부분 -->
    <item android:right="8dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#1E88E5"/> <!-- 말풍선 색상 -->
                <size android:width="14dp" android:height="14dp"/>
            </shape>
        </rotate>
    </item>

    <!-- 말풍선 본체 -->
    <item android:right="5dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#1E88E5"/> <!-- 말풍선 색상 -->
            <corners android:radius="16dp"/> <!-- 더 둥글게 -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>
